<Application x:Class="UvpClient.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:viewmodels="using:UvpClient.ViewModels"
             xmlns:helpers="using:UvpClient.Helpers">
    <Application.Resources>
        <ResourceDictionary>
            <helpers:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
            <helpers:NullableObjectToVisibilityConverter x:Key="NullableObjectToVisibilityConverter" />
            <helpers:InvisibleWhenZeroConverter x:Key="InvisibleWhenZeroConverter" />
            <helpers:VisibleWhenZeroConverter x:Key="VisibleWhenZeroConverter" />
            <helpers:QuestionnaireTypeToSelectionModelConverter x:Key="QuestionnaireTypeToSelectionModelConverter" />
            <helpers:VoteToAnswerConverter x:Key="VoteToAnswerConverter" />
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>